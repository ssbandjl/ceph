-int XioConnection::on_msg(struct xio_session *session,
-			      struct xio_msg *msg,
-			      int more_in_batch,
-			      void *cb_user_context)
-{
-  char tag = CEPH_MSGR_TAG_MSG;
-  if (msg->in.header.iov_len)
