-  void *entry()
-    {
-      int size, code = 0;
-      uint32_t xio_qdepth_high;
-      XioSubmit::Queue send_q;
-      XioSubmit::Queue::iterator q_iter;
-      struct xio_msg *msg = NULL;
-      XioConnection *xcon;
-      XioSubmit *xs;
-      XioSend *xsend;
-
-      do {
-	submit_q.deq(send_q);
-
-	/* shutdown() barrier */
-	pthread_spin_lock(&sp);
-
-      restart:
-	size = send_q.size();
-
-	if (_shutdown) {
-	  // XXX XioSend queues for flow-controlled connections may require
-	  // cleanup
-	  drained = true;
-	}
-
-	if (size > 0) {
-	  q_iter = send_q.begin();
