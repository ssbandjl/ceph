-  if (! (flags & OP_FLAG_LOCKED))
-    pthread_spin_unlock(&xcon->sp);
-
-  // notify ULP
-  XioMessenger* msgr = static_cast<XioMessenger*>(xcon->get_messenger());
-  msgr->ms_deliver_handle_reset(xcon);
-  m->put();
-
-  return 0;
-}
